<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#3F51B5</item>
    <item name="colorPrimaryDark">#303F9F</item>
    <item name="colorAccent">#FF4081</item>
</style>

<style name="HeaderFont" parent="@android:style/TextAppearance.Medium">

    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">#BBDEFB</item>
    <item name="android:textSize">18sp</item>
    <item name="android:inputType">textCapCharacters</item>
    <item name="android:textColor">#1565C0</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingLeft">8dp</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:gravity">left|center_vertical</item>
</style>


    <style name="speaker">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5sp</item>
        <item name="android:src">@drawable/speaker</item>
    </style>

    <style name="text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15sp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">top</item>
    </style>

</resources>
